= osom_table_for @things,
  class: 'table table-striped table-condenced table-bordered',
  url: things_path,
  push: true,
  id: 'things-table',
  async: @things.blank? do |t|

  = t.head do
    %th{order: 'name'} Name
    %th{order: 'desc'} Description
    %th{order: 'size'} Size

  = t.body do |thing|
    %td= link_to(thing.name, thing_path(thing))
    %td= thing.description
    %td= thing.size
